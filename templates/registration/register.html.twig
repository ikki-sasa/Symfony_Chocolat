{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}


<main class="container-fluid">
    <div class="row">
        <div class="col-8 offset-2 mt-5">
            {% for label, messages in app.flashes %}
            {% for message in messages %}
            <div class="flash-{{ label }} bg-{{ label }} text-light p-3 mb-5 rounded">
                {{ message }}
            </div>
            {% endfor %}
            {% endfor %}
        </div>
    </div>
    <h1 class="text-center mt-5">Inscription - Les Amoureux du Chocolat</h1>
    <div class="row py-5">
        <div class="col-3 offset-4 mt-5">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}
            <div class="text-end">
                <button type="submit" class="btn btn-validation mb-2">Validation</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>

</main>


{% endblock %}