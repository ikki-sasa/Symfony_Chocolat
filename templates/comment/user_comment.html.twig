{% extends 'base.html.twig' %}

{% block title %}Laisser un commentaire ♥ Les Amoureux du Chocolat ♥{% endblock %}

{% block body %}

<section class="bg-white text-dark mt-5 pt-5 pb-5">
    <div class="container-fluid">
        <div class="row justify-content-center align-content-center d-flex mt-5">
            <div class="col-md-6 col-12 mx-auto justify-content-center align-content-center d-md-flex flex-column">
                <h2 class="mb-5 mt-3">Laissez votre commentaire ! </h2>
                <p class="text-h3 lead">Partagez avec nous votre avis sur nos événements est créations est même nous
                    reviendrons vers vous avec pleins de surprise est de nouveauté tout au long de l'années ! </p>
                <h4 class="mb-3 mt-3">Message</h4>
                {{ form_start(commentForm)}}
                <div class="row mt-4">
                    <div class="col">
                        <div class="form-control mt-1">
                            {{ form_row(commentForm.content) }}
                            {# {{ form_row(contactForm.message) }} #}
                            {# {{ form_errors(contactForm.message) }} #}
                        </div>
                    </div>
                </div>
                <div class="col-12 text-end">
                    <a href="{{ path('comment_admin_index') }}" class="btn btn-outline-danger mt-5 me-2">Annuler</a>
                    {# a changer sinon espace admin pour user #}
                    <button class="btn-btn-outilne-dark">
                        Envoyer
                    </button>
                </div>
                {# {{ include('comment/_form.html.twig') }} #}
            </div>
            {{ form_end(commentForm)}}
            <div class="col-md-3 col-6 mx-auto">
                {# {% for articles in article %} #}
                <div class="card">
                    <img src="{{ asset('img/Blog/' ~ article.featuredImg ) }}"
                        alt="photo principale {{ article.title }}" class="img-fluid mt-5">
                    {# <img class="card-img-top shadow mt-5" src=" https://dummyimage.com/700x750/007bff/ffffff"
                        alt="Profile"> #}

                    <div class="card-body text-center">
                        <h4 class="card-title">{#{ articles.title }#}</h4>

                        <p class="mt-4">
                            <a href="#" class="">retour à l'article</a>
                        </p>
                    </div>
                </div>
                {# {% endfor %} #}
            </div>
        </div>
    </div>
</section>

{% endblock %}