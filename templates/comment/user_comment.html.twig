{% extends 'base.html.twig' %}

{% block title %}Laisser un commentaire ♥ Les Amoureux du Chocolat ♥{% endblock %}

{% block body %}

<section class="bg-white text-dark mt-5 pt-5 pb-5">
    <div class="container-fluid">
        <div class="row justify-content-center align-content-center d-flex mt-5">
            <div class="col-md-6 col-12 mx-auto justify-content-center align-content-center d-md-flex flex-column">
                <h2 class="mb-5 mt-3 text-center">Laissez votre commentaire ! </h2>
                <p class="text-h3 lead text-center">Partagez avec nous votre avis sur nos événements est créations est
                    même nous
                    reviendrons vers vous avec pleins de surprise est de nouveauté tout au long de l'années</p>
                <h4 class="mb-3 mt-3 h4-comment">Message</h4>
                {{ form_start(commentForm)}}
                <div class="row mt-4">
                    <div class="col">
                        <div class="form-control mt-1 mb-4 pb-4">
                            {{ form_row(commentForm.title) }}
                        </div>
                        <div class="form-control mt-1 mb-4 pb-4">
                            {{ form_row(commentForm.content) }}
                        </div>
                        {# <div class="form-control mt-1 mb-4 pb-4">
                            {{ form_errors(commentForm.content) }}
                        </div> #}
                    </div>
                </div>

                <div class="col-12 text-end send-comment">
                    <button class="btn" id="btn-comment" type="submit">
                        Envoyer
                    </button>
                </div>
                <div class="text-end ">
                    <a href="{{ path('article_index') }}" class="btn" id="cancel-comment">
                        Annuler</a>
                </div>
                {# {{ include('comment/_form.html.twig') }} #}
            </div>
            {{ form_end(commentForm)}}
            <div class="col-md-3 col-6 mx-auto" id="comment-card">
                {# {% for articles in article %} #}
                <div class="card">
                    <img src="{{ asset('img/Blog/' ~ article.featuredImg ) }}"
                        alt="photo principale {{ article.title }}" class="img-fluid mt-5">
                    {# <img class="card-img-top shadow mt-5" src=" https://dummyimage.com/700x750/007bff/ffffff"
                        alt="Profile"> #}

                    <div class="card-body text-center">
                        <h4 class="card-title">{#{ articles.title }#}</h4>

                        <p class="mt-4">
                            <a href="{{ path('article_index') }}" class="">retour à l'article</a>
                        </p>
                    </div>
                </div>
                {# {% endfor %} #}
            </div>
        </div>
    </div>
</section>
{% include "shared/_scrolltop.html.twig" %}
{% endblock %}