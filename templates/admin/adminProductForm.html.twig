{% extends "adminBase.html.twig" %}

{% block title %}Produit{% endblock %}

{% block body %}

{{ form_start(productForm)}}
<div class="row">
    <div class="col-3">
        {{ form_row(productForm.category_id, {'label': 'Catégorie'})}}
    </div>
    <div class="col-9">
        {{ form_row(productForm.product_name, {'label': 'Nom'})}}
    </div>
</div>

<div class="col-12">
    {{ form_row(productForm.description,{'label': 'Description'})}}
</div>

<div class="row">
    <div class="col-3">
        {# {{ form_row(productForm.status, {'label': 'Disponibilité'})}} #}
    </div>
    <div class="col-3">
        {{ form_row(productForm.price, {'label': 'Prix (€)'})}}
    </div>
</div>

<div class="row">
    <div class="col-6">
        {{ form_row(productForm.img, {'label': 'Première photo du produit'})}}
    </div>
    <div class="col-6">
        {{ form_row(productForm.img2, {'label': 'Second photo du produit'})}}
    </div>
</div>

<div class="col-12 d-flex justify-content-end">
    <a href=" {{ path('admin_product_index') }} " class="btn btn-danger m-3">Annuler</a>
    <button class="btn btn-success m-3">Créer/ajouter</button>
</div>
{{ form_end(productForm)}}

{% endblock %}