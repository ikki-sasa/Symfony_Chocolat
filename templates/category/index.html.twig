        <img src=" {{asset('img/category/' ~ category.img )}} " alt="photo principale {{category.name}}"
            class="card-img-top ">
        <div class="card-body">
            <h5 class="card-title"> {{ category.name }} </h5>
        </div>
    </div>
</div>

{% endfor %}

{% endblock %}