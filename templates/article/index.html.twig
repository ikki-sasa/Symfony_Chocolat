{% extends 'base.html.twig' %}

{% block title %} ChocoBlog Articles ♥ Les Amoureux du Chocolat ♥{% endblock %}

{% block body %}

<main class="container-fluid">
    {% include "shared/_flash.html.twig" %}
    <h1 class="text-center pt-5 mb-5 pb-5 title-intro-blog">ChocoBlog - Notre actualité les biens faits du chocolat
        et
        bien plus
        encore
    </h1>
    <div class="row" id="article-blog">
        {% for article in articles %}
        <div class="col-4 mt-2 pt-3 pb-5" id="article-read">
            <div class="card profile-card-blog text-center border-top-0">
                <div class="card-img-block">
                    <img src=" {{asset('img/Blog/' ~ article.featuredImg )}} " alt="photo principale {{article.title}}"
                        class="card-img-top" id="blog-img">
                </div>
                <div class="card-body pt-0">
                    <h4 class="card-title text-center mt-5"> {{ article.title}} </h4>
                    <p class="card-text"> {{ article.content|u.truncate(30, '...', false)}} </p>
                    <a href=" {{ path('article', {'id': article.id} )}} " target="_blank">Lire la
                        suite</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</main>
{% endblock %}