{% extends 'base.html.twig' %}

{% block title %}{{ article.title }} détails Chocoblog ♥ Les Amoureux du Chocolat ♥ {% endblock %}

{% block body %}
<div class="row border border-dark mb-6">
    <div class="col-md-6 ">
        <div class="product">
            <div class="item">
                <img src="{{ asset('img/Blog/' ~ article.featuredImg ) }}" alt="photo principale {{ article.title }}"
                    class="img-fluid mt-5 vh-100 vw-100">
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="product-dtl">
            <div class="product-info mt-5 text-left py-3 px-lg-5">
                <ol class="breadcrumb">
                    <ol class="breadcrumb py-3">
                        <li class="breadcrumb-item"><a href=" {{ path('home')}} ">Accueil</a></li>
                        <li class="breadcrumb-item"><a href=" {{ path('article_index')}} ">ChocoBlog article</a>
                        </li>
                        <li class="breadcrumb-item active">{{ article.title }}</li>
                    </ol>
                </ol>
                <h4> {{ article.event }} </h4>
                <div class="text-left">
                    </p>
                    <p>{{ article.title}}
                    </p>
                    <p class="p-article">{{ article.content }}</p>
                    {# <p> {{ article.description }} </p> #}
                </div>
                <a href=" {{ path('comment_new', {'id':article.id}) }} ">Commenter l'article</a>
                <div class="pt-5">
                    <h1 class="text-center mt-5 pb-5">Découvrez ce que nos clients disent de l'événement</h1>
                    {% for comment in comments|reverse %}
                </div>
            </div>
        </div>
    </div>
</div>
{% if comment.commentStatus == true %}
<div class="container">
    <div class="row mb-2">
        <div class="col-md-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <h3 class="mb-0">
                        Commentaires
                    </h3>
                    <div class="mb-1 text-muted">
                        <p>Posté par</p> {{
                        comment.userId.firstName}}
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <h3 class="mb-0">{{ article.title }}</h3>
                    <div class="mb-1 text-muted">{{ comment.createdAt|date('d/m/y')}}</div>
                    <p class="card-text mb-auto">{{ comment.content}}</p>
                    <a href="#">Répondre</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

{% endfor %}
{% include "shared/_scrolltop.html.twig" %}
{% endblock %}