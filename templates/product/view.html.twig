{% extends 'base.html.twig' %}
{% block title %}Détails Produit ♥ Les Amoureux du Chocolat ♥{% endblock %}

{% block body %}

<div class="pd-wrap mt-5">
    <div class="row border border-dark mb-6">
        <div class="col-md-6 ">
            <div class=" product">
                <div class="item">
                    <img src="{{ asset('img/category/' ~ product.img ) }}" alt="photo principale" class="img-fluid">
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="product-dtl">
                <div class="product-info mt-5 text-left py-3 px-lg-5">
