{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe ♥ Les Amoureux du Chocolat ♥{% endblock %}

{% block body %}
<div class="row mb-6 mx-auto d-flex">
    {% include "shared/_flash.html.twig" %}
    {% for flash_error in app.flashes('reset_password_error') %}
    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="text-center mt-5">Réinitialisez votre mot de passe</h1>
    <div class="text-center label-form-center mx-auto">
        {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
    </div>
    <div>
        <small>
            <p class="small-p">
                Entrez votre adresse e-mail et nous vous enverrons un
                lien pour réinitialiser votre mot de passe.
            </p>
        </small>
    </div>
    <div class="col">
        <button class="btn btn-reset mb-5" id="btn-reset">Envoyer</button>
    </div>
    {{ form_end(requestForm) }}
</div>
{% endblock %}