{% extends 'base.html.twig' %}

{% block title %}Nous contacter ♥ Les Amoureux du Chocolat ♥{% endblock %}

{% block body %}
<header class="hero">
    <div class="banner-hero-img">
        <img src="{{ asset('/Img/Gallery-l-m/apropos-de-nous-acceuil.png')}}" alt="Les Amoureux du Chocolat"
            class="img-header-contact" />
        <h1 class="contact-h1">Nous Contacter
        </h1>
    </div>
</header>
<section class="pb-5 pt-0">
    <div class="container-fluid">
        <div class="row mt-5">
            <div class="col-12 col-md-6 col-lg-6">
                <h2 class="mb-5 contact-h2">Recevez des informations personnalisées</h2>
                <p class="text-center mt-5">Si vous avez un doute ou une interrogation... nous restons à votre
                    disposition pour
                    toute
                    information complémentaire !</p>
                <p class="text-center mt-5">Contactez-nous via le formulaire.</p>
                <p class="text-center mt-5" id="email-contact">
                    <strong>Email:</strong>
                    <a href="mailto:contact@lesamoureuxduchocolat.com" target="_blank"
                        title="Envoyez un mail à Les amoureux du chocolat"
                        class="mail-contact">contact@lesamoureuxduchocolat.com</a>
                </p>
                <p class="text-center mt-5">
                    <strong>Téléphone:</strong>
                    <a href="#">01 85 41 05 43</a>
                </p>
            </div>
            <div class="col-12 col-md-6 ms-auto pt-5 pt-md-0">
                {{ form_start(contactForm)}}

                {# <form> #}
                    <div class="row">
                        <div class="col">
                            {{ form_row(contactForm.firstName)}}


                        </div>
                        <div class="col">
                            {{ form_row(contactForm.lastName)}}
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col">
                            {{ form_row(contactForm.email)}}
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col">
                            {{ form_row(contactForm.phone)}}
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col">
                            {{ form_row(contactForm.message)}}
                        </div>
                    </div>
                    {# <div class="row mt-4">
                        <div class="col">
                            {{ form_row(contactForm.captcha) }}
                            {{ form_errors(contactForm.captcha) }}
                        </div>
                    </div> #}
                    <div class="row mt-4">
                        <div class="col">

                            <button class="btn btn-md btn-primary mt-5 mb-5" id="btn-contact" type="submit">
                                Envoyer
                            </button>
                            {# <input type="submit" class="btn btn-primary" value="Envoyer"> #}
                        </div>
                    </div>
                    {#
                </form> #}
                {{ form_end(contactForm)}}
            </div>
        </div>
    </div>
</section>
{% include "shared/_scrolltop.html.twig" %}
{% endblock %}