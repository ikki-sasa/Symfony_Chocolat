{% extends 'base.html.twig' %}

{% block title %}Nous contacter ♥ Les Amoureux du Chocolat ♥{% endblock %}

{% block body %}
<section class="pt-5 pb-5 mt-0 align-items-center d-flex bg-dark"
    style="min-height: 100vh; background-size: cover; background-image: url(./Img/Gallery-l-m/apropos-de-nous-acceuil.png);">
    <div class="container ">
        <div class="row align-items-center ">
            <h1 class="  text-white fw-bold mb-3 mt-5 display-3 text-center">Nous Contacter</h1>
        </div>
    </div>
</section>
<section class="pb-5 pt-0">

    <div class="container">
        <div class="row pt-5">
            <div class="col-12">
                <h1 class="text-center pb-5">Recevez des informations personnalisées</h1>
                {{ form_start(contactForm)}}
                <div class="row">
                    <div class="col-12 col-md">
                        <div class="form-control ">
                            {{ form_row(contactForm.firstName) }}
                            {# {{ form_errors(contactForm.firstName) }} #}

                        </div>
                    </div>
                    <div class="col-12 col-md mt-4 mt-md-0">
                        <div class="form-control mt-1">
                            {{ form_row(contactForm.lastName) }}
                            {# {{ form_errors(contactForm.lastName) }} #}

                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col">
                        <div class="form-control mt-1">
                            {{ form_row(contactForm.email) }}
                            {# {{ form_errors(contactForm.email) }} #}
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col">
                        <div class="form-control mt-1">
                            {{ form_row(contactForm.phone) }}
                            {# {{ form_errors(contactForm.phone) }} #}
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col">
                        <div class="form-control mt-1">
                            {{ form_row(contactForm.message) }}
                            {# {{ form_errors(contactForm.message) }} #}
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="mt-1">
                        {{ form_row(contactForm.captcha) }}
                        {{ form_errors(contactForm.captcha) }}
                    </div>
                </div>

                <div class="row mt-4 text-center">
                    <div class="col">
                        <input type="submit" class="btn btn-primary btn-md" value="Envoyer">
                    </div>
                </div>
            </div>
            {{ form_end(contactForm)}}
        </div>
    </div>
</section>
{% endblock %}